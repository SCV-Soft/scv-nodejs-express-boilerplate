{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "allowJs": true,
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*":["src/*"],
            "@components/": ["src/components/*"],
            "@core/": ["src/core/*"]
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [ "src/**/*" ],
    "exclude": [
        "node_modules"
    ]
}
